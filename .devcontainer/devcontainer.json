{
    "name": "Ubuntu 24.04 with GCC & Libraries",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "remoteUser": "dev",
    "postStartCommand": "sudo chown -R 1000:1000 /workspaces/cpp-scan-static && sudo chmod -R a+w /workspaces/cpp-scan-static",
    "customizations": {
      "vscode": {
        "extensions": [
          "llvm-vs-code-extensions.vscode-clangd",
          "vadimcn.vscode-lldb",
          "twxs.cmake",
          "ms-vscode.cmake-tools"
        ]
      }
    }
  }